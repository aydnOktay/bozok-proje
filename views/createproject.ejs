<%- include("layout/header") %>

    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Proje Oluştur</strong>
                            </div>
                            <div class="card-body card-block">
                                <form action="projects" method="POST" class="form-horizontal">

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Proje Başlığı</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="project_title"
                                                class="form-control">
                                            <small class="form-text text-muted">Lütfen proje adını Tam olarak
                                                girin</small>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Proje Amacı</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="project_purpose"
                                                class="form-control">
                                            <small class="help-block form-text">Kısa ve öz olarak proje amacını
                                                giriniz</small>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="textarea-input" class=" form-control-label">Proje Detayı</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <textarea name="project_description" id="textarea-input" rows="9"
                                                class="form-control"></textarea>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="select" class=" form-control-label">Ekip Üyesi Seç</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <select name="project_users" id="select" class="form-control">
                                                <option value="0">Oktay Aydın</option>
                                                <option value="1">Hakkı Hakyemez</option>
                                                <option value="2">Abdullah Ölürdedönmez</option>
                                                <option value="3">Huriye Delergeçer</option>
                                            </select>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fa fa-dot-circle-o"></i> Oluştur !
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("layout/footer") %>